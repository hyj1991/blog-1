<div class="col-lg-2 col-xs-3" id='sidebar'>
    <div class="bg"></div>
    <div class='logo_head'>
        <h1 class='h1' id="logo">ZXCCHEN</h1>
        <h4 class='h4'>一个编程萌新</h4>
        <h6 class='h6'>不忘初心，方得始终</h6>
        <h6 class='h6' id='login_btn'>登陆</h6>
    </div>
    <div class='article'>
        <script type="text/javascript">
            var menuList = <%- menuList %>;
            app.addRender(function () {
                var blogMenu = document.getElementById("blog_menu");
                var listContent = {};
                var blogMenuContent = '';
                for (var key in config.BLOG_POST_TYPES) {
                    listContent[key] = [];
                }
                if (menuList instanceof Array) {
                    for (var i = 0; i < menuList.length; i++) {
                        listContent[menuList[i].type].push(menuList[i]);
                    }
                }
                console.log(listContent,config.BLOG_POST_TYPES);
                for (var j in listContent) {
                    var articleUl = [];
                    articleUl.push("<h5 class='h5'>" + config.BLOG_POST_TYPES[j] + "</h5>");
                    articleUl.push("<ul>");
                    for (var k = 0; k < listContent[j].length; k++) {
                        var liContent = "<li><a href='/blogpost?op=show&postId=" + listContent[j][k]._id + "'>" +
                            listContent[j][k].title + "</a></li>";
                        articleUl.push(liContent);
                    }
                    articleUl.push("</ul>");
                    blogMenuContent += articleUl.join("");
                }
                blogMenu.innerHTML = blogMenuContent;
            });
        </script>
        <div id="blog_menu"></div>
    </div>
    <div class='foot'>
        <h4 class='h4'>源码</h4>
        <h4 class='h4'>修订历史</h4>
        <h4 class='h4'>反馈意见</h4>
    </div>
</div>